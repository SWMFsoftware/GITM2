# Plain 1D
test_earth_1d_compile:
	./Config.pl -Earth -g=1,1,50,4
	$(MAKE) GITM
#	make PIDL

test_earth_1d_rundir:
	rm -rf ${TESTDIR}
	$(MAKE) rundir RUNDIR=${TESTDIR}

test_earth_1d_run:
	cd ${TESTDIR}; cp ./DataIn/UAM.in.1d ./UAM.in
	cd ${TESTDIR}; ${MPIRUN} ./GITM.exe > runlog_1d
	cd ${TESTDIR}; ${MPIRUN} ./pGITM
	cd ${TESTDIR}; mkdir results_1d
	cd ${TESTDIR}; mv ./data/* ./results_1d/

test_earth_1d_check:
	-@(${SCRIPTDIR}/DiffNum.pl -t \
		srcData/log0000000?.1d.dat \
		${TESTDIR}/results_1d/log0000000?.dat \
		>& ${TESTDIR}/results_1d/test_1d.diff)
	ls -l ${TESTDIR}/results_1d/test_1d.diff

