# ----------------------------------------------------

test_mars_1d_compile:
	./Config.pl -Mars -g=1,1,120,4
	$(MAKE) GITM
#	make PIDL

test_mars_1d_rundir:
	rm -rf ${TESTDIR}
	$(MAKE) rundir RUNDIR=${TESTDIR}

test_mars_1d_run:
	cd ${TESTDIR}; cp ./DataIn/UAM.Mars1D.in ./UAM.in
	cd ${TESTDIR}; ${MPIRUN} ./GITM.exe > runlog_1d
	cd ${TESTDIR}; ${MPIRUN} ./pGITM
	cd ${TESTDIR}; mkdir results_1d
	cd ${TESTDIR}; mv ./data/* ./results_1d/

test_mars_1d_check:
	-@(${SCRIPTDIR}/DiffNum.pl -b -r=1e-5 \
		./results_1d/log0000000?.dat ./DataIn/log00000000?.1d.dat \
		> ./results_1d/test_1d.diff)
	diff ./results_1d/run_information.txt ./DataIn/run_information.txt >> ./results_1d/test_1d.diff
	cd results_1d ; idl < ../DataIn/idl_input.1d
	ls -l test_1d.diff

